  $text = strHtmlElem
  initElement
End

Private Function innerHTML_Read() As String
  Return $innerHTML
End

Private Sub innerHTML_Write(Value As String)
  $innerHTML = Value
  $text = Value
  initElement
End

Private Function text_Read() As String
  Return $text
End

